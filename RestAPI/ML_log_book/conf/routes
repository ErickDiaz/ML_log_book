# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /nueva-promocion							controllers.PromotionController.newPromotion
GET     /new-promotion                              controllers.PromotionController.newPromotion
GET     /api/projects                               controllers.ProjectController.get(id: Integer ?= -1)
GET     /api/proyectos                              controllers.ProjectController.get(id: Integer ?= -1)
GET     /api/project/$id<[0-9]+>                    controllers.ProjectController.get(id: Integer)
GET     /api/proyecto/$id<[0-9]+>                   controllers.ProjectController.get(id: Integer)
